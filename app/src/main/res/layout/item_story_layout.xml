<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="@dimen/dp_10"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center">

    <com.yk.silence.customwallpaper.ui.imageview.CustomRoundView
        android:id="@+id/img_item_story_url"
        android:layout_width="@dimen/dp_80"
        android:layout_height="@dimen/dp_80"
        android:scaleType="centerCrop"
        app:round_radius="@dimen/dp_10"
        android:src="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/txt_item_story_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_item_story_url"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_5"
        android:gravity="center"
        android:text="@string/text_default"
        android:textColor="@color/colorGray"
        android:textSize="@dimen/sp_12" />

    <TextView
        android:id="@+id/txt_item_story_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_item_story_category"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_5"
        android:gravity="center"
        android:text="@string/text_default_number"
        android:textColor="@color/colorGray"
        android:textSize="@dimen/sp_12" />

</RelativeLayout>
