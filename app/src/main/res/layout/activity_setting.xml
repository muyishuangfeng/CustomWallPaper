<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.yk.silence.toolbar.CustomTitleBar
        android:id="@+id/title_setting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:leftImage="@drawable/ic_back"
        app:middleTextColor="@color/colorBlue"
        app:middleTextSize="@dimen/sp_16"
        app:middleTitle="@string/text_setting" />

    <LinearLayout
        android:id="@+id/lyt_setting_nickName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_setting"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_nick_name"
            android:textColor="@color/colorGray"
            android:textSize="@dimen/sp_12"
            app:fontFamily="@font/montserrat_medium" />

        <TextView
            android:id="@+id/txt_setting_nickName"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:gravity="center_vertical"
            android:text="@string/text_default"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/sp_14"
            app:fontFamily="@font/montserrat_bold" />
    </LinearLayout>


    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_below="@+id/lyt_setting_nickName"
        android:layout_margin="@dimen/dp_5"
        android:background="@color/colorGrayLight" />

    <LinearLayout
        android:id="@+id/lyt_setting_sex"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view1"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_sex"
            android:textColor="@color/colorGray"
            android:textSize="@dimen/sp_12"
            app:fontFamily="@font/montserrat_medium" />

        <TextView
            android:id="@+id/txt_setting_sex"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:gravity="center_vertical"
            android:text="@string/text_default"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/sp_14"
            app:fontFamily="@font/montserrat_bold" />
    </LinearLayout>

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_below="@+id/lyt_setting_sex"
        android:layout_margin="@dimen/dp_5"
        android:background="@color/colorGrayLight" />

    <LinearLayout
        android:id="@+id/lyt_setting_birthday"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view2"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_birthday"
            android:textColor="@color/colorGray"
            android:textSize="@dimen/sp_12"
            app:fontFamily="@font/montserrat_medium" />

        <TextView
            android:id="@+id/txt_setting_birthday"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:gravity="center_vertical"
            android:text="@string/text_default"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/sp_14"
            app:fontFamily="@font/montserrat_bold" />
    </LinearLayout>

    <View
        android:id="@+id/view3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_below="@+id/lyt_setting_birthday"
        android:layout_margin="@dimen/dp_5"
        android:background="@color/colorGrayLight" />

    <LinearLayout
        android:id="@+id/lyt_setting_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view3"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_area"
            android:textColor="@color/colorGray"
            android:textSize="@dimen/sp_12"
            app:fontFamily="@font/montserrat_medium" />

        <TextView
            android:id="@+id/txt_setting_area"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:gravity="center_vertical"
            android:text="@string/text_default"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/sp_14"
            app:fontFamily="@font/montserrat_bold" />
    </LinearLayout>

    <View
        android:id="@+id/view4"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_below="@+id/lyt_setting_area"
        android:layout_margin="@dimen/dp_5"
        android:background="@color/colorGrayLight" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view4"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_description"
            android:textColor="@color/colorGray"
            android:textSize="@dimen/sp_12"
            app:fontFamily="@font/montserrat_medium" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/edt_setting_description"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:background="@null"
            android:gravity="center_vertical"
            android:text="@string/text_default"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/sp_14"
            app:fontFamily="@font/montserrat_bold" />
    </LinearLayout>

</RelativeLayout>