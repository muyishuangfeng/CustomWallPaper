<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.yk.silence.toolbar.CustomTitleBar
        android:id="@+id/toolBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:leftImage="@drawable/ic_back"
        app:middleTextColor="@color/colorBlue"
        app:middleTitle="@string/text_select_image"
        app:rightImage="@drawable/ic_back" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rlv_image_select"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolBar" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_empty"
        android:layout_width="@dimen/dp_80"
        android:layout_height="@dimen/dp_80"
        android:layout_centerInParent="true"
        android:src="@drawable/ic_no"
        android:visibility="gone" />
</RelativeLayout>